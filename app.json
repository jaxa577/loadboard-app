{
  "expo": {
    "name": "CLB Driver",
    "slug": "clb-mobile-driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.clb.driver",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to track your journey.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location even when running in the background to track your journey.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "package": "com.clb.driver",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
